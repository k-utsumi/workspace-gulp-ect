<% include '_partials/global-header.ect', { navSub: content 'navSub' } %>



    <div class="container">
      <main class="content-main" id="content" tabindex="-1"><% content %></main>
      <div  class="content-sub">
        <p>Sub Column</p>
      </div>
    </div>

    <footer class="global">
      <div class="container">
        <nav class="nav-top"><a href="#top">Top <i class="fa fa-arrow-up"></i></a></nav>
        <small class="copyright">&copy; <span class="logo">xxxxxxxxxx</span> Inc.</small>
        <ul>
          <li><a href="#">利用規約</a></li>
          <li><a href="#">プライバシーポリシー</a></li>
        </ul>
      </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="<%= @pathAssets %>js/script.js<%= timestamp %>"></script>
