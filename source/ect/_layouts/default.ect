<%

  # サイト全体に関わる変数は全て、gulpfile の ectData で設定しています。

  # ページタイトルの設定 （サイト名を付け足す）
  pageTitle = content 'title'
  pageTitle = if pageTitle then pageTitle + ' / ' + @siteTitle else @siteTitle

  # timestamp の設定 for CSS and JS
  timestamp = "?t=" + (new Date() / 1000 | 0);
  timestamp = "";

%>
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= pageTitle %></title>
    <meta name="keywords"    content="xxxxxxxxxx共通キーワードxxxxxxxxxx<%=
      if content 'keywords' then ', ' + content 'keywords' %>">
    <meta name="description" content="<%= content 'description' %>">
    <meta name="referrer" content="unsafe-url">

    <link rel="canonical" href="<%= @siteURL + @pagePath %>">

    <link rel="stylesheet" href="<%= @pathAssets %>css/style.css<%= timestamp %>">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
